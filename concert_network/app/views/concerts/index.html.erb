<main class="col-md-8">
	<h2>Today</h2>
	<% if !@today_concerts.blank? %>
		<ul>
		<% @today_concerts.each do |concert| %>
			<li>
			<%= link_to "#{concert.band} - #{concert.city}", concert_path(concert) %>
			</li>
		<% end %>
		</ul>
	<% else %>
		<p>No concerts today.</p>
	<% end %>
</main>

<aside class="col-md-4">
	<h2>Later this month</h2>
		<% if !@today_to_end_month_concerts.blank? %>
			<ul>
				<% @today_to_end_month_concerts.each do |concert| %>
				<li>
				<%= link_to "#{concert.band} - #{concert.city}", concert_path(concert) %>
				</li>
			<% end %>
			</ul>
		<% else %>
			<p>No concerts later this month.</p>
		<% end %>		
</aside>