<h2>Add a new concert</h2>

<%= form_for @concert do |f| %>
	<%= f.label :band %>
	<%= f.text_field :band, class: "form-control" %>
	
	<%= f.label :venue %>
	<%= f.text_field :venue, class: "form-control" %>
	
	<%= f.label :city %>
	<%= f.text_field :city, class: "form-control" %>
	
	<%= f.label :date %>
	<%= f.date_field :date, class: "form-control" %>
	
	<%= f.label :price %>
	<%= f.number_field :price, class: "form-control" %>
	
	<%= f.label :description %>
	<%= f.text_area :description, class: "form-control" %>
	
	<%= f.label :poster %>
	<%= f.file_field :poster %>
	
	<%= f.submit "Add concert", class: "btn btn-primary" %>
<% end %>