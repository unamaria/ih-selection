<h2>Add new user</h2>

<%= form_for @user do |f| %>
<%= render 'layouts/errors', model: @user %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<br />
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br />
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br />
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<br />
	<%= f.submit %>
<% end %>